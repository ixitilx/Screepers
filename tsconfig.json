{
    "compilerOptions": {
        "allowJs": true,
        "rootDir": "./src/",
        "outDir": "./dist/js/",
        
        "strictNullChecks": true,
        "noImplicitThis": true,
        "noImplicitAny": true,
        "removeComments": true,
        "preserveConstEnums": true,
        "sourceMap": true
    },
    "include": [
        "./typings/**/*",
        "./src/**/*"
    ],
    "exclude": [
        "./node_modules",
        "./dist",
        "./config",
        "**/*.spec.ts"
    ]
}